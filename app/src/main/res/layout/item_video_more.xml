<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_more_x98"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    tools:ignore="UnusedAttribute">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/thumb_more_x98"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foreground="@drawable/image_gradient_4"
        android:scaleType="centerCrop"
        android:src="@color/teal_700"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_4sdp" />

    <TextView
        android:id="@+id/duration_more_x98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@id/thumb_more_x98"
        app:layout_constraintTop_toTopOf="@id/thumb_more_x98" />

    <TextView
        android:id="@+id/title_more_x98"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/thumb_more_x98"
        app:layout_constraintStart_toStartOf="@id/thumb_more_x98"
        app:layout_constraintTop_toBottomOf="@id/thumb_more_x98" />

</androidx.constraintlayout.widget.ConstraintLayout>